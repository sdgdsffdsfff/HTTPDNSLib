            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:text="公共DNS服务"
            android:textColor="#4b4a4a"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkbox_udpdns"
